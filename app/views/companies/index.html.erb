<% @page_title = "Company-List" %>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Company</th>
          <th>Manager</th>
          <th>Status</th>
          <th>Terms</th>         
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.manager %></td>
            <td><%= company.status %></td>
            <td><%= company.terms %></td>            
            <td><%= link_to 'Show', company, class: 'btn btn-mini btn-info' %></td>
            <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-mini btn-warning' %></td>
            <td><%= link_to 'Destroy', company, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<h3>Import Companies</h3>
<%= form_tag import_companies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "upload companies" %>
<% end %>

<hr>
<%= link_to 'New Company', new_company_path, class: 'btn btn-mini btn-success' %>

<%= link_to "Report", companies_path(format: "csv"), class: 'btn btn-default' %>